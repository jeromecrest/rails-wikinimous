<div class="article-header">
  <div class="article-title"> <%= @article.title  %> </div>
  <div class="article-actions">
    <%= link_to '<i class="fas fa-edit"></i>'.html_safe, edit_article_path %>
    <%= link_to '<i class="fas fa-trash"></i>'.html_safe, article_path(@article), method: :delete, data: { confirm: "Are you sure?" }  %>
  </div>
</div>
<p> <%= @article.content %></p>
